---
import contactpic from '@images/3d-guy.png';
import MainLayout from '@layouts/MainLayout.astro';
import { Picture } from 'astro:assets';
---

<MainLayout>
  <section class="container mx-auto grid grid-cols-1 gap-4 px-4 py-12 font-body md:grid-cols-2">
    <div class="space-y-8">
      <h1 class="text-center font-display text-4xl font-bold">Contact Form</h1>
      <p class="text-center text-lg">
        Have a question or inquiry? Fill out the form below hit send! ðŸš€ & I will get back to you as
        soon as possible.
      </p>
      <figure class="hidden justify-center md:flex">
        <Picture
          src={contactpic}
          alt="contact"
          formats={['avif', 'webp']}
          class="scale-x-[-1] shadow-lg"
          height={300}
        />
      </figure>
    </div>

    <div class="space-y-8 px-4 md:px-12" transition:name="contact">
      <form
        action="https://send.pageclip.co/6N14uX3PyM17F0uIMBMdd1zA1nxVoe6p/contact-me"
        class="pageclip-form space-y-4"
        method="post">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <span class="name">Name*</span>
            <input
              type="text"
              name="name"
              id="name"
              min="3"
              max="30"
              pattern="[a-zA-Z ]+"
              required
              placeholder="Han Solo"
              class="input input-bordered input-primary w-full max-w-xs
               invalid:text-red-600"
            />
          </div>
          <div>
            <label for="subject" class="text-md">Subject*</label>
            <input
              type="text"
              name="subject"
              id="subject"
              min="5"
              max="30"
              pattern="[a-zA-Z !.?]+"
              required
              placeholder="I have a project for you!"
              class="input input-bordered input-primary w-full max-w-xs invalid:inline-block invalid:text-red-600"
            />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="form-group">
            <label for="email" class="text-md">Email*</label>
            <input
              type="email"
              name="email"
              id="email"
              pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
              required
              placeholder="hansolo@mail.com"
              class="input input-bordered input-primary w-full max-w-xs invalid:inline-block invalid:text-red-600"
            />
          </div>
          <div>
            <label for="phone" class="text-md">Phone*</label>
            <input
              type="tel"
              name="phone"
              id="phone"
              min="10"
              max="12"
              pattern="[0-9]{10,12}"
              required
              placeholder="91 9988-776-655"
              class="input input-bordered input-primary w-full max-w-xs invalid:inline-block invalid:text-red-600"
            />
          </div>
        </div>
        <div class="w-full">
          <label for="message" class="text-md">Message*</label>
          <textarea
            name="message"
            id="message"
            rows="5"
            minlength="10"
            maxlength="500"
            required
            class="textarea textarea-primary w-full invalid:inline-block invalid:text-red-600"
            placeholder="Something you want me to know!">
          </textarea>
        </div>
        <button
          type="submit"
          class="pageclip-form__submit btn btn-primary btn-block font-display hover:scale-105 hover:shadow-2xl hover:shadow-primary hover:transition
        hover:duration-500 hover:ease-in-out">
          <span>Send</span>
        </button>
      </form>
    </div>
  </section>
</MainLayout>

<script src="../utils/pageclip.js"></script>
