---
import { SOCIAL } from '@consts';
import { Icon } from 'astro-icon/components';

const socialLinks = [
  { name: 'linkedin', tip: 'LinkedIn', href: SOCIAL.LINKEDIN },
  { name: 'twitter', tip: 'Twitter / X.', href: SOCIAL.TWITTER },
  { name: 'github', tip: 'GitHub', href: SOCIAL.GITHUB },
  { name: 'dribble', tip: 'Dribble', href: SOCIAL.DRIBBLE },
  { name: 'instagram', tip: 'Instagram', href: SOCIAL.INSTAGRAM },
];
---

<div class="flex items-center justify-start space-x-2 font-body lg:space-x-8">
  <span class="text-sm lg:text-lg">Connect with me:</span>
  {
    socialLinks.map(({ name, tip, href }) => (
      <a
        class="tooltip tooltip-bottom"
        data-tip={tip}
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Visit my ${tip} profile`}
      >
        <Icon class="size-10 " name={name} />
        <span class="sr-only">{`Visit my ${tip} profile`}</span>
      </a>
    ))
  }
</div>
