---
import NavLink from '@components/NavLinks.astro';
import { Image } from 'astro:assets';

import { SITE } from '@consts';
const links = [
  { href: '/projects', text: 'Projects' },
  { href: '/contact', text: 'Contact' },
  { href: '/blog', text: 'Blog' },
];
// icons
import light from '@assets/svgs/light.svg';
import dark from '@assets/svgs/dark.svg';
---

<header class="navbar mt-3" transition:persist>
  <div class="navbar-start">
    <div class="dropdown lg:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost" aria-label="Menu">|||</div>
      <ul
        tabindex="0"
        class="menu dropdown-content menu-sm z-[1] mt-3 w-52 rounded-box bg-base-100 p-2 shadow lg:hidden"
      >
        {links.map((link) => <NavLink href={link.href}>{link.text}</NavLink>)}
      </ul>
    </div>

    <a class="mt-5 font-display text-xl font-medium italic lg:ml-16 lg:text-3xl" href="/">
      <span>
        {SITE.AUTHOR}.
      </span>
    </a>
  </div>

  <div class="navbar-end lg:flex">
    <ul class="menu menu-horizontal hidden px-1 md:flex">
      {links.map((link) => <NavLink href={link.href}>{link.text}</NavLink>)}
    </ul>

    <label class="swap swap-rotate">
      <!-- this hidden checkbox controls the state -->
      <input name="theme" type="checkbox" class="theme-controller" value="InfinityLight" />
      <Image class="swap-on mr-5 h-6 w-6 fill-current" src={light} alt="light" />
      <Image class="swap-off mr-5 h-6 w-6 fill-current" src={dark} alt="dark" />
    </label>
  </div>
</header>
