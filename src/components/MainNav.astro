---
import NavLink from '@components/NavLinks.astro';
import { Image } from 'astro:assets';

import { SITE } from '@consts';
const links = [
  { href: '/projects', text: 'Projects', icon: project },
  { href: '/contact', text: 'Contact', icon: contact },
  { href: '/blog', text: 'Blog', icon: blog },
];
// icons
import blog from '@svgs/blog.svg';
import dark from '@svgs/dark.svg';
import home from '@svgs/home.svg';
import light from '@svgs/light.svg';
import menu from '@svgs/menu.svg';
import project from '@svgs/project.svg';
import contact from '@svgs/contact.svg';
import rss from '@svgs/rss.svg';
---

<div class="drawer font-body text-primary-content" transition:persist>
  <input id="mobile-menu" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar w-full bg-primary lg:px-12">
      <div class="flex-none lg:hidden">
        <label for="mobile-menu" aria-label="open sidebar" class="btn btn-square btn-ghost">
          <Image class="size-8" src={menu} alt="Menu icon" />
        </label>
      </div>
      <div
        class="mx-2 flex-1 px-2 font-display text-2xl font-semibold italic hover:underline lg:text-3xl"
      >
        <a href="/" aria-label="Home">{SITE.AUTHOR}.</a>
      </div>

      <div class="hidden flex-none lg:block">
        <ul class="menu menu-horizontal text-lg font-medium">
          <!-- Navbar menu content here -->
          {links.map((link) => <NavLink href={link.href}>{link.text}</NavLink>)}
        </ul>
      </div>

      <!-- Theme Switcher -->
      <span class="sm:mr-2">
        <label class="swap swap-rotate">
          <input
            name="theme"
            type="checkbox"
            class="theme-controller"
            value="InfinityLight"
            aria-label="Theme switcher"
          />
          <Image class="swap-on size-8" src={light} alt="Light theme icon" />
          <Image class="swap-off size-8" src={dark} alt="Dark theme icon" />
        </label>
      </span>
    </div>
  </div>

  <!-- Rest of the code remains the same -->

  <div class="drawer-side z-10">
    <label for="mobile-menu" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul
      class="menu flex min-h-full w-80 flex-col items-center bg-base-100 p-4 pt-12 text-2xl font-medium text-base-content"
    >
      <!-- Sidebar content here -->
      <li class="border-b-2 border-base-300 pb-4 font-bold">Main Menu</li>
      <li>
        <a href="/">
          <Image class="size-8" src={home} alt="Home icon" />
          Home.
        </a>
      </li>
      {
        links.map((link) => (
          <li>
            <a href={link.href}>
              <Image class="size-8" src={link.icon} alt={`${link.text} icon`} />
              {link.text}.
            </a>
          </li>
        ))
      }
      <li>
        <a href="/rss.xml">
          <Image class="size-8" src={rss} alt="rss icon" />
          RSS.
        </a>
      </li>
    </ul>
  </div>
</div>
