---
import FormattedDate from './FormattedDate.astro'
const { slug, title, description, heroImage, updatedDate, tags } = Astro.props
---

<a href={`/blog/${slug}/`}>
  <div class='card card-compact w-full bg-base-500 shadow-xl border-2 border-primary'>
    <figure>
      <img src={heroImage} alt='{heroImage}' />
    </figure>
    <div class='card-body'>
      <h2 class='card-title font-primary'>{title}</h2>
      <FormattedDate date={updatedDate} />
      <p class='font-secondary'>{description}</p>
      <div class='card-actions justify-end'>
        {
          tags &&
            tags.map((tag) => <div class='badge badge-outline'>{tag}</div>)
        }
      </div>
    </div>
  </div>
</a>
