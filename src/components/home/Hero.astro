---
import Social from '@components/Social.astro';
import { SITE } from '@consts';
import myImage from '@images/lucas-k-wQLAGv4_OYs-unsplash.jpg';
import { Picture } from 'astro:assets';
---

<style>
  .typing {
    border-right: 0.2em solid white;
    animation:
      typing 3.5s steps(40, end),
      blink-caret 0.75s step-end infinite;
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: white;
    }
  }

  .hero-section {
    background-image: url('/images/bg_wave.svg');
    background-repeat: no-repeat;
    background-size: cover;
    animation: fadeIn 2s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
<section class="body-font hero-section hidden bg-cover bg-center bg-no-repeat text-white">
  <div class="container">
    <div class="container mx-auto flex flex-col items-center px-5 py-24 md:flex-row">
      <div class="mb-10 w-5/6 md:mb-0 md:w-1/2 lg:w-full lg:max-w-lg">
        <Picture
          src={myImage}
          alt="Profile Picture"
          class="clip-path-[ellipse(50% 70% at 50% 50%)] transform rounded border-4 border-white object-cover object-center transition-all duration-500 hover:scale-110 hover:grayscale"
        />
      </div>
      <div
        class="flex flex-col items-center text-center md:w-1/2 md:items-start md:pl-16 md:text-left lg:flex-grow lg:pl-24"
      >
        <h1
          class="title-font animate-swing text-shadow-lg mb-4 font-serif text-3xl font-medium text-white sm:text-4xl"
        >
          John Doe
          <br class="hidden lg:inline-block" />Freelancer Developer & Designer
        </h1>
        <p class="text-shadow typing mb-8 font-mono leading-relaxed">
          I'm a professional freelancer specializing in web development and design. s I create
          beautiful, responsive, and user-friendly websites.
        </p>
        <div class="flex justify-center">
          <Social />
        </div>
        <div class="mt-4 flex justify-center">
          <button
            class="animate-swing inline-flex rounded border-0 bg-indigo-500 px-6 py-2 text-lg text-white hover:bg-indigo-600 focus:outline-none"
            >Hire Me</button
          >
          <button
            class="animate-swing ml-4 inline-flex rounded border-0 bg-green-500 px-6 py-2 text-lg text-white hover:bg-green-600 focus:outline-none"
            >View My Work</button
          >
          <button
            class="animate-swing ml-4 inline-flex rounded border-0 bg-blue-500 px-6 py-2 text-lg text-white hover:bg-blue-600 focus:outline-none"
            >Contact Me</button
          >
        </div>
      </div>
    </div>
  </div>
</section>

<section
  class="hero-section flex h-[100vh] flex-col items-center justify-center px-6 md:flex-row lg:px-28"
>
  <main class="animate-slide-in md:w-2/3">
    <small class="text-left font-body text-sm sm:text-lg">Hello, I'm</small>
    <h1 class="mb-4 font-display text-4xl font-bold sm:text-6xl">Sahil Ahmad</h1>
    <h2 class="mb-4 font-body text-2xl sm:text-4xl">A Multifaceted Developer & Designer</h2>
    <p class="font-body text-lg sm:text-2xl">
      I craft unique brand identities, compelling websites, and innovative software solutions.
    </p>
    <div class="mt-8">
      <a class="btn btn-primary btn-sm mr-2 font-body uppercase" href={`mailto:${SITE.MAIL}`}
        >Contact me</a
      >
      <a
        class="btn btn-secondary btn-sm font-body uppercase"
        href="/resume/Sahil_Resume_W_2024.pdf"
        download>Download Resume</a
      >
    </div>
    <Social class="mt-8 inline-flex space-x-4" />
  </main>
  <div class="md:w-1/3">
    <Picture
      class="transform rounded object-cover object-center transition-transform hover:scale-105"
      src={myImage}
      formats={['avif', 'webp']}
      alt="A picture of smoke"
      loading="eager"
    />
  </div>
</section>
<style>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  .social-icon {
    width: 26px;
    height: 26px;
  }
</style>
